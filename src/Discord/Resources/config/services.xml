<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="http" class="Discord\Http\Http">
            <argument type="service" id="cache_wrapper.default"/>
            <argument>%token%</argument>
            <argument>%version%</argument>
        </service>

        <service id="factory.part" class="Discord\Factory\PartFactory">
            <argument type="service" id="http"/>
            <argument type="service" id="cache_wrapper.default"/>
        </service>

        <service id="client" class="Discord\Parts\User\Client">
            <factory service="factory.part" method="create"/>
            <argument>Discord\Parts\User\Client</argument>
            <argument type="expression">service('http').get('users/@me', null, null, null, true)</argument>
            <argument>true</argument>
        </service>
        <service id="websocket" class="Discord\WebSockets\WebSocket">
            <argument type="service" id="service_container"/>
        </service>

        <service id="annotation_reader" class="Doctrine\Common\Annotations\AnnotationReader"/>
    </services>
</container>