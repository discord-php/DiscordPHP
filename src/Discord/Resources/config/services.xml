<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="guzzle" class="Discord\Guzzle">
            <argument type="service" id="cache"/>
            <argument>%token%</argument>
            <argument>%version%</argument>
        </service>

        <service id="part_factory" class="Discord\Factory\PartFactory">
            <argument type="service" id="guzzle"/>
        </service>

        <service id="client" class="Discord\Parts\User\Client">
            <factory service="part_factory" method="create"/>
            <argument>Discord\Parts\User\Client</argument>
            <argument type="expression">service('guzzle').get('users/@me')</argument>
            <argument>true</argument>
        </service>
        <service id="websocket" class="Discord\WebSockets\WebSocket">
            <argument type="service" id="discord"/>
            <argument type="service" id="guzzle"/>
            <argument type="service" id="part_factory"/>
            <argument>%token%</argument>
        </service>
    </services>
</container>