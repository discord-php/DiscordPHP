<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="repository.abstract" class="Discord\Repository\AbstractRepository" abstract="true">
            <argument type="service" id="cache_wrapper.default"/>
        </service>

        <service id="repository.channel" class="Discord\Repository\ChannelRepository" parent="repository.abstract"/>
        <service id="repository.guild" class="Discord\Repository\GuildRepository" parent="repository.abstract"/>
        <service id="repository.message" class="Discord\Repository\MessageRepository" parent="repository.abstract"/>
        <service id="repository.role" class="Discord\Repository\RoleRepository" parent="repository.abstract"/>
        <service id="repository.user" class="Discord\Repository\UserRepository" parent="repository.abstract"/>
    </services>
</container>